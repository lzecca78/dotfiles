{
  "yaml.completion": true,
  "yaml.validate": true,
  "yaml.format.enable": true,
  "yaml.schemas": {
    "kubernetes": ["/*.yaml", "/*.yml"]
  },

  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  }
}
